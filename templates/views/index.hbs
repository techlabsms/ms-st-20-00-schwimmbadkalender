<!DOCTYPE html>
<html>
    <head>
        <title>Index</title>
    </head>

  <body>
      {{#each errors}}
        <div class="error">
            <p>{{text}}</p>
        </div>
        {{/each}}
        <form action="/users/add" method="POST">
           
            <div class="input-group">
                <label for="fname">Vorname:</label><br>
                <input type="text" id="fname" name="fname" value={{fname}}><br>
            </div>
            <div class="input-group">
                <label for="lname">Nachname:</label><br>
                <input type="text" id="lname" name="lname" value={{lname}}><br>
            </div>
            <div class="input-group">
                <label for="street">Stra√üe:</label><br>
                <input type="text" id="street" name="street" value={{street}}><br>
            </div>
            <div class="input-group">
                <label for="streetNumber">Nr.:</label><br>
                <input type="text" id="streetNumber" name="streetNumber" value={{streetNumber}}><br>
            </div>
            <div class="input-group">
                <label for="plz">Postleitzahl:</label><br>
                <input type="text" id="plz" name="plz" value={{plz}}><br>
            </div>
            <div class="input-group">
                <label for="city">Stadt:</label><br>
                <input type="text" id="city" name="city" value={{city}}><br>
            </div>
            <div class="input-group">
                <label for="email">Email Adresse:</label><br>
                <input type="text" id="email" name="email" value={{email}}><br>
            </div>
            <div class="input-group">
                <label for="numberOfPersons">Anzahl Personen:</label><br>
                <input type="text" id="numberOfPersons" name="numberOfPersons" value={{numberOfPersons}}><br>
            </div>
            
            <input type="submit" value="Reservierung">
        </form>
    </body>
</html>